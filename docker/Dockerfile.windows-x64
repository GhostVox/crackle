# === docker/Dockerfile.windows-x64 ===
FROM rust:1.81

RUN apt-get update && \
    apt-get install -y gcc-mingw-w64-x86-64 && \
    rustup target add x86_64-pc-windows-gnu && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /workspace
CMD ["cargo", "build", "--target", "x86_64-pc-windows-gnu", "--release"]
